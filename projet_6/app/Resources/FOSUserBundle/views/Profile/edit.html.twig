{# app/Resources/FOSUserBundle/views/Registration/register.html.twig #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% extends '@Citresp/layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('theme/css/sign-in.css') }}">
{% endblock %}

{% block fos_user_content %}
  <div class="contaner-sign-in text-center">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_profile_edit'), 'attr': {'class': 'form-signin'}}) }}

    <h1 class="h3 mb-3 font-weight-normal">Modifier votre compte</h1>

    {{ form_errors(form.username) }}
    {{ form_label(form.username, null, {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.username, {'attr': {'class': 'form-control',
  'placeholder': 'form.username'|trans}}) }}

    {{ form_errors(form.email) }}
    {{ form_label(form.email, null, {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control',
    'placeholder': 'form.email'|trans}}) }}

    <br>

    {{ form_errors(form.current_password) }}
    {{ form_label(form.current_password, null, {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.current_password, {'attr': {'class': 'form-control',
      'placeholder': 'form.password'|trans}}) }}




    <br>

    <input class="btn btn-lg btn-info btn-block" type="submit" value="{{ 'profile.edit.submit'|trans }}"/>

    {{ form_rest(form) }}

    <div class="link_to_change">
      <a href="{{ path('fos_user_resetting_request') }}">Changer de mot de passe</a>
    </div>
    {{ form_end(form) }}



  </div>

{% endblock %}
