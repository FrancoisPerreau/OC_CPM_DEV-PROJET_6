{# app/Resources/FOSUserBundle/views/Registration/register.html.twig #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% extends '@Citresp/layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('theme/css/sign-in.css') }}">
{% endblock %}

{% block fos_user_content %}
  <div class="contaner-sign-in text-center">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-signin'}}) }}

    <h1 class="h3 mb-3 font-weight-normal">Créer un compte</h1>

    {{ form_errors(form.username) }}
    {{ form_label(form.username, null, {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.username, {'attr': {'class': 'form-control',
  'placeholder': 'form.username'|trans}}) }}

    {{ form_errors(form.email) }}
    {{ form_label(form.email, null, {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control',
    'placeholder': 'form.email'|trans}}) }}

    <br>

    {{ form_errors(form.plainPassword.first) }}
    {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control',
      'placeholder': 'form.password'|trans}}) }}

    {{ form_errors(form.plainPassword.second) }}
    {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'sr-only'}}) }}
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control',
      'placeholder': 'form.password_confirmation'|trans}}) }}

    <br>
    {{ form_errors(form.city) }}
    {{ form_label(form.city, null, {'label_attr': {'class': 'text-left'}}) }}
    {{ form_widget(form.city, {'attr': {'class': 'form-control',
    'placeholder': 'form.city'|trans}}) }}

    <br>

    {{ form_errors(form.notification) }}
    <div class="text-left">
    {{ form_widget(form.notification, {'attr': {'class': 'form-check-input'}}) }}
    {{ form_label(form.notification, null, {'label_attr': {'class': 'form-check-label'}}) }}
    <p class="text-min-size text-muted">(pour être informé des modifications et commentaires fait sur vos publications)</p>
    </div>

     <br>

    <input class="btn btn-lg btn-info btn-block" type="submit" value="{{ 'registration.submit'|trans }}"/>

    {{ form_rest(form) }}
    {{ form_end(form) }}

  </div>

{% endblock %}
