{# app/Resources/FOSUserBundle/views/Resetting/request.html.twig #}

{% extends "@Citresp/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('theme/css/sign-in.css') }}">
{% endblock %}

{% block fos_user_content %}
  <div class="contaner-sign-in text-center">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-signin">

      <label class="sr-only" for="username">{{ 'resetting.request.username'|trans }}</label>
      <input class="form-control" type="text" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}"/>

      <div>
        <input class="btn btn-lg btn-info btn-block" type="submit" value="{{ 'resetting.request.submit'|trans }}"/>
      </div>
    </form>
  </div>
{% endblock %}
