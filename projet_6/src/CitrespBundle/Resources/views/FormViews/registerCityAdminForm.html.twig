{# src/CitrespBundle/Resources/views/FormViews/registerCityAdminForm.html.twig #}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form,  {'attr': {'class': 'form-signin'}}) }}

  <h1 class="h3 mb-3 font-weight-normal">
    Cr√©er un compte <br>
    <span class="h5 mb-3 font-weight-normal">({{ cityName }})</span>
  </h1>


  {{ form_errors(form.username) }}
  {{ form_label(form.username, null, {'label_attr': {'class': 'sr-only'}}) }}
  {{ form_widget(form.username, {'attr': {'class': 'form-control',
    'placeholder': 'form.username'|trans}}) }}

  {{ form_errors(form.email) }}
  {{ form_label(form.email, null, {'label_attr': {'class': 'sr-only'}}) }}
  {{ form_widget(form.email, {'attr': {'class': 'form-control',
      'placeholder': 'form.email'|trans}}) }}

  <br>

  {{ form_errors(form.plainPassword.first) }}
  {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'sr-only'}}) }}
  {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control',
        'placeholder': 'form.password'|trans}}) }}

  {{ form_errors(form.plainPassword.second) }}
  {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'sr-only'}}) }}
  {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control',
        'placeholder': 'form.password_confirmation'|trans}}) }}

  <br>

  <input class="btn btn-lg btn-info btn-block" type="submit" value="{{ 'registration.submit'|trans }}"/>

  {{ form_rest(form) }}
{{ form_end(form) }}
