{# src/CitrespBundle/Resources/views/Security/login.html.twig #}
{% extends '@Citresp/layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('theme/css/sign-in.css') }}">
{% endblock %}

{% block body %}
  <div class="contaner-sign-in text-center">

    {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
    <form class="form-signin" action="{{ path('login_check') }}" method="post">
      <h1>Se connecter</h1>
      {# S'il y a une erreur, on l'affiche dans un joli cadre #}
      {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
      {% endif %}

      <label for="username">Login :</label>
      <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>

      <label for="password">Mot de passe :</label>
      <input class="form-control" type="password" id="password" name="_password"/>
      <br/>
      <input class="btn btn-lg btn-info btn-block" type="submit" value="Connexion"/>
    </form>

  </div>
{% endblock %}
