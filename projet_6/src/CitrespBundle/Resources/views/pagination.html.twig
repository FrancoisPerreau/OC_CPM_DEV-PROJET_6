{# src/CitrespBundle/Resources/views/pagination.html.twig #}

{% if pagination.nbPages > 1 %}
  <nav aria-label="Page navigation" class="pagination-block">
    <ul class="pagination justify-content-center">
      {% if pagination.page > 1 %}
        <li class="page-item">
          <a class="page-link" href="{{ path(pagination.routeName, pagination.routeParams|merge({'slug': app.user.city.slug, 'page': pagination.page - 1})) }}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      {% endif %}

      {% for p in range(1, pagination.nbPages) %}
        <li class="page-item {% if p == pagination.page %}active{% endif %}">
          <a href="{{ path(pagination.routeName, pagination.routeParams|merge({'slug': app.user.city.slug, 'page': p})) }}" class="page-link">
            {{ p }}
          </a>
        </li>
      {% endfor %}

      {% if pagination.page < pagination.nbPages %}
        <li class="page-item">
          <a href="{{ path(pagination.routeName,
            pagination.routeParams|merge({'slug': app.user.city.slug, 'page': pagination.page + 1 })) }}" class="page-link">
            &raquo;
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
